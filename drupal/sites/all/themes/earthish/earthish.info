; The name and description of the theme used on the admin/build/themes page.
name        = Earthish
description = a theme for websites that want to be more horizontally orientated.

; The screenshot used on the admin/build/themes page.
screenshot = images/screenshot.png

core   = 6.x
engine = phptemplate

; Various page elements output by the theme that can be toggled on and off. 
; Features control which of these check boxes display on the admin/build/themes page.
  
features[] = logo
features[] = name
features[] = search
features[] = favicon
features[] = primary_links
features[] = secondary_links

stylesheets[all][]   = css/html-tags.css
stylesheets[all][]   = css/style.css
stylesheets[print][] = css/print.css
conditional-stylesheets[if IE][all][] = ie.css

; Theme Default jQuery scripts.
scripts[] = scripts.js

regions[footer_primary]    = Primary Footer
regions[footer_secondary]  = Secondary Footer

regions[header] = Header
; We call sidebars "left" and "right" b/c those are phptemplate defaults.
regions[left] = First sidebar
regions[right] = Second sidebar
regions[callout] = Callout
regions[content_top] = Content top
regions[notes] = Notes
regions[preface] = Content preface
regions[content_bottom] = Content bottom
; We use regions[footer] for first footer b/c most themes use this region.
regions[footer_first] = First footer
regions[footer_second] = Second footer
regions[footer] = Footer



